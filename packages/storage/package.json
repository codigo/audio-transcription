{
  "name": "@codigo/audio-transcription-storage",
  "version": "0.0.0-development",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "tap --disable-coverage test/**/*.test.ts",
    "clean": "rm -rf dist",
    "migrate": "tsx src/migrations/index.ts",
    "postinstall": "node scripts/check-sqlite.js",
    "lint": "eslint ."
  },
  "dependencies": {
    "better-sqlite3": "^11.6.0"
  },
  "devDependencies": {
    "@codigo/audio-transcription-core": "workspace:*",
    "@types/better-sqlite3": "^7.6.4",
    "@types/node": "^22.10.1",
    "@types/tap": "^18.0.0",
    "tap": "^21.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "ts-node": "^10.9.0"
  },
  "peerDependencies": {
    "@codigo/audio-transcription-core": "workspace:*"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/codigo-ai/audio-transcription.git"
  },
  "release": {
    "extends": "semantic-release-monorepo",
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  },
  "files": [
    "dist",
    "src"
  ],
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "engines": {
    "node": ">=22.0.0"
  }
}
